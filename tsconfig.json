{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "target": "ES2022",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
